{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<br><br>
{% include 'base/flash.html.twig' %}

<div class="container">
    <div class="card card-body bg-dark text-white">
    
        <h1 class="display-4" style="font-size: 1.5em; margin: 0; padding:0;">Votre panier</h1><hr style="color:white; margin: 5px; padding:0;">


<table class="table table-dark">

  <tbody>

    {% for aCart in cart.getCart() %}
        <tr>
        <td>
            <img src="{{ aCart[0][0].getProduit().getIllustration() }}" style="height:100px;width: 100px;" alt="">
        </td>
        <td>
            <p>{{  aCart[0][0].getProduit().getNom() }}</p>
            <p>{{ aCart[1] }} x {{ aCart[0][0].getContenance().getPrix() }} €</p>    
        </td>
        <td>
            <p><a style="margin:5px;" href="#" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a><a style="margin:5px;" href="{{ path('app_product_show', {id: aCart[0][0].getProduit().getId()}) }}" class="btn btn-primary btn-sm"><i class="fa-solid fa-eye"></i></a></p>
        </td>
        </tr>
    {% endfor %}
  </tbody>
</table>

    <br>
    <div class="row">
        <div class="col-5">
        </div>
        <div class="col-5">
        <h1 class="display-4" style="font-size: 1em; margin: 0; padding:0;">Récapitulatif</h1><hr style="color:white; margin: 5px; padding:0;">
            <table class="table table-dark">
            
                <tbody>
                    <tr><th scope="row">Total</th><th> {{ cart.getTotal() }} €</th></tr>
                    <tr></tr>
                </tbody>
            </table>
            <div><a href="#" class="btn btn-block btn-outline-primary">Payer</a></div>
        </div>
    </div>

    </div>
</div>
<br><br>

{% endblock %}
